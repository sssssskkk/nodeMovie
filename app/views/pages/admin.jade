extends ../layout
block content
  .container
    .row
        form.form-horizontal(method="post", action="/admin/movie/new",enctype='multipart/form-data')
          .form-group
             label.col-sm-2.control-label(for="douban") 同步录入
             .col-sm-10
                input#douban.form-control(type="text")
          if movie._id
            input(type="hidden",name="movie[_id]",value=movie._id)
          .form-group
             label.col-sm-2.control-label(for="inputCategory") 分类
             .col-sm-10
                input#inputCategory.form-control(type="text",name="movie[categoryName]",value=movie.categoryName)
          .form-group
             label.col-sm-2.control-label(for="inputTitle") 分类选择   
             .col-sm-10  
                each cat in categories
                  label.radio-inlne
                    if movie._id
                      input(type="radio",name="movie[category]",value=cat._id,
                      checked=cat._id.toString()==movie.category.toString())
                      | #{cat.name}
                    else
                      input(type="radio",name="movie[category]",value=cat._id,)
                      | #{cat.name}
          .form-group
             label.col-sm-2.control-label(for="inputTitle") 电影名字
             .col-sm-10
                input#inputTitle.form-control(type="text",name="movie[title]",
                value=movie.title)
          .form-group
             label.col-sm-2.control-label(for="inputDirector") 导演
             .col-sm-10
                input#inputDirector.form-control(type="text",name="movie[director]",
                value=movie.director)
          .form-group
             label.col-sm-2.control-label(for="inputPiaofang") 票房
             .col-sm-10
                input#inputPiaofang.form-control(type="text",name="movie[piaofang]",
                value=movie.piaofang)
          .form-group
             label.col-sm-2.control-label(for="inputChoice") choice
             .col-sm-10
                input#inputChoice.form-control(type="text",name="movie[choice]",
                value=movie.choice)
          .form-group
             label.col-sm-2.control-label(for="inputbannerId") bannerId
             .col-sm-10
                input#inputbannerId.form-control(type="text",name="movie[bannerid]",
                value=movie.bannerid)
          .form-group
             label.col-sm-2.control-label(for="inputbannerPic") bannerPic
             .col-sm-10
                input#inputbannerPic.form-control(type="text",name="movie[bannerpic]",
                value=movie.bannerpic)
          .form-group
             label.col-sm-2.control-label(for="inputAverage") 评分
             .col-sm-10
                input#inputAverage.form-control(type="text",name="movie[average]",
                value=movie.average)
          .form-group
             label.col-sm-2.control-label(for="inputUrl") url地址
             .col-sm-10
                input#inputUrl.form-control(type="text",name="movie[url]",
                value=movie.url)
          .form-group
             label.col-sm-2.control-label(for="inputCountry") 国家
             .col-sm-10
                input#inputCountry.form-control(type="text",name="movie[country]",
                value=movie.country)
          .form-group
             label.col-sm-2.control-label(for="inputActor") 演员
             .col-sm-10
                input#inputActor.form-control(type="text",name="movie[actors]",
                value=movie.actors)
          .form-group
             label.col-sm-2.control-label(for="inputHotword") 看点
             .col-sm-10
                input#inputHotword.form-control(type="text",name="movie[hotword]",
                value=movie.hotword)
          .form-group
             label.col-sm-2.control-label(for="inputActorPic") 演员(照片)
             .col-sm-10
                textarea#inputActorPic.form-control(type='text',name="movie[actorpic]")= movie.actorpic 
          .form-group
             label.col-sm-2.control-label(for="inputShowPic") 介绍照片
             .col-sm-10
                textarea#inputShowPic.form-control(type='text',name="movie[showpic]")= movie.showpic 
          .form-group
             label.col-sm-2.control-label(for="inputGenres") 类型
             .col-sm-10
                input#inputGenres.form-control(type="text",name="movie[genres]",
                value=movie.genres)
          .form-group
             label.col-sm-2.control-label(for="inputYear") 年份
             .col-sm-10
                input#inputYear.form-control(type="text",name="movie[year]",
                value=movie.year) 
          .form-group
             label.col-sm-2.control-label(for="inputPoster") 海报
             .col-sm-10
                input#inputPoster.form-control(type="text",name="movie[poster]",
                value=movie.poster) 
          .form-group
             label.col-sm-2.control-label(for="uploadPoster") 海报上传
             .col-sm-10
                input#uploadPoster(type="file",name="uploadPoster") 
          .form-group
             label.col-sm-2.control-label(for="inputSummary") 简介
             .col-sm-10
                textarea#inputSummary.form-control(type='text',name="movie[summary]")= movie.summary    
          .form-group
            button.btn(type="submit") 录入
  script(src="/js/admin.js")
