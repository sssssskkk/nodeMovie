block content
    include ../includes/header
    #body.clearfix
      .hot.clearfix
        .h1-title
          h1 正在热映
        .hot_con.clearfix
          if nows && nows.length>0
            each now in nows
              dl
                dt
                  .dt-mask
                    p 导演：#{now.director}
                    p 主演：#{now.actors}
                    p 类型：#{now.genres}
                    p 国家：#{now.country}
                    p 版本：#{now.version}
                    p 时长：#{now.long}
                  img(src='#{now.poster}', alt='海报')
                dd
                  p #{now.title}
                  span #{now.time}
      .new
        .h1-title
          h1 即将上映
        .new_con.clearfix
          if wills && wills.length>0
            each will in wills
              dl
                dt
                  .dt-mask
                    p 导演：#{will.director}
                    p 主演：#{will.actors}
                    p 类型：#{will.genres}
